---
import Header from '../../components/Header.astro';
import "../../styles/global.css";
import cities from '../../data/cities.json'; // üî• Import des villes dynamiques

// Astro doit savoir quelles pages g√©n√©rer avant le build
export async function getStaticPaths() {
  return cities.map(city => ({ params: { city } }));
}
---

<html lang="fr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />
    <title>Formulaire √âtape 3</title> <!-- üî• Valeur par d√©faut -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-100 text-gray-800 h-screen flex items-center justify-center">
    <Header />
    <main class="container mx-auto p-6 max-w-2xl bg-white shadow-lg rounded-lg"
    x-init="
    city = window.location.pathname.split('/')[1]; 
    document.title = city + ' - √âtape finale';
    formAnswers = JSON.parse(localStorage.getItem('formAnswers') || '{}');
    $watch('formAnswers', value => localStorage.setItem('formAnswers', JSON.stringify(value)))
"
x-data="{ 
    city: '',  
    specificRequests: [],
    generalRequests: [],
    otherRequest: '',
    formAnswers: {},
    specificOptions: {
        'annot': ['Escalade', 'Train √† Vapeur', 'Gr√®s d‚ÄôAnnot'],
        'colmars-les-alpes': ['Lac d Allos','Cascade de la Lance','Maison Mus√©e'],
        'entrevaux': ['Nice', 'Cote dazur', 'Visite guid√©e', 'Chemin de ronde', 'Citadelle', 'Gorge de Daluis', 'Train √† Vapeur'],
        'la-palud-sur-verdon': ['Blanc-Martel', 'Route des Cr√™tes', 'Escalade et via cordatta'],
        'saint-andre-les-alpes': ['Lac de Castillon', 'Parapente']
    },
    generalOptions: [
        'Randonn√©es', 'P√™che', 'Train', 'Villages alentours', 'Patrimoine culturel', 'Patrimoine naturel', 'Acc√®s et transports',
        'Informations pratiques', 'Ev√®nements et animations', 'Baignade et nautisme', 'Boutique Verdon Tourisme', 'Activit√© d‚Äôeau vive',
        'V√©lo et VTT', 'Autres activit√©s de pleine nature', 'Commerces', 'Restaurants', 
        'H√©bergements', 'Partenariat', 'Demandes d‚Äôhabitants'
    ]
}">

<h1 class="text-3xl font-bold mb-4">√âtape final</h1>


<!-- Question 1 : Demande sp√©cifique -->
<template x-if="specificOptions[city]">
    <div>
        <p class="text-xl mb-2">Demande sp√©cifique √† <span class="font-bold" x-text="city"></span> :</p>
        <div class="flex flex-wrap gap-2 mb-4">
            <template x-for="option in specificOptions[city]" :key="option">
                <button 
                    x-on:click="specificRequests.includes(option) ? specificRequests.splice(specificRequests.indexOf(option), 1) : specificRequests.push(option)"
                    :class="specificRequests.includes(option) ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'"
                    class="px-4 py-2 rounded hover:bg-blue-400">
                    <span x-text="option"></span>
                </button>
            </template>
        </div>
    </div>
</template>

<!-- Question 2 : Demande g√©n√©rale -->
<p class="text-xl mb-2">Demande g√©n√©rale :</p>
<div class="flex flex-wrap gap-2 mb-4">
    <template x-for="option in generalOptions" :key="option">
        <button 
            x-on:click="generalRequests.includes(option) ? generalRequests.splice(generalRequests.indexOf(option), 1) : generalRequests.push(option)"
            :class="generalRequests.includes(option) ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'"
            class="px-4 py-2 rounded hover:bg-blue-400">
            <span x-text="option"></span>
        </button>
    </template>
</div>

<!-- S√©parateur -->
<hr class="my-4 border-t border-gray-300">

<!-- Champ de saisie pour "Autres, √† pr√©ciser..." (TOUJOURS AFFICH√â) -->
<div class="mb-4">
    <p class="text-lg font-semibold mb-2">Autres, √† pr√©ciser :</p>
    <input 
        type="text" 
        x-model="otherRequest" 
        class="border p-2 rounded w-full" 
        placeholder="Pr√©cisez votre demande...">
</div>

        <!-- Bouton de validation -->
        <button
            type="button"
            x-on:click="if(specificRequests.length > 0 || generalRequests.length > 0 || otherRequest.trim() !== '') { 
                formAnswers.city = city;
                formAnswers.specificRequests = specificRequests;
                formAnswers.generalRequests = generalRequests;
                formAnswers.otherRequest = otherRequest;

                localStorage.setItem('formAnswers', JSON.stringify(formAnswers));
                console.log('Form3 - Donn√©es sauvegard√©es : ', JSON.parse(localStorage.getItem('formAnswers')));
                
                // Envoi des donn√©es au serveur
                    fetch('/api/saveAnswer', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formAnswers)
                    })
                    .then(response => response.json())
                    .then(data => {
                        console.log('R√©ponse du serveur : ', data);
                        alert('Merci ! Votre formulaire est bien enregistr√©.');
                        localStorage.removeItem('formAnswers');
                        window.location.href='/' + city + '/form1';
                    })
                    .catch(error => {
                        console.error('Erreur lors de la sauvegarde : ', error);
                        alert('Erreur lors de la sauvegarde.');
                    });
            } else { 
                alert('Veuillez s√©lectionner une p√©riode de s√©jour.'); 
            }"
            class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 mt-4 rounded-lg text-lg cursor-pointer">
            Envoyer
        </button>
    </main>
</body>
</html>
