---
import Header from '../../components/Header.astro';
import "../../styles/global.css";
import cities from '../../data/cities.json'; // üî• Import des villes dynamiques

// Astro doit savoir quelles pages g√©n√©rer avant le build
export async function getStaticPaths() {
  return cities.map(city => ({ params: { city } }));
}
---

<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <title>Formulaire √âtape 3</title> <!-- üî• Valeur par d√©faut -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <Header />
    <main class="container mx-auto p-4 max-w-lg"
        x-init="
            city = window.location.pathname.split('/')[1]; 
            document.title = 'Formulaire - ' + city + ' - √âtape 3';
            formAnswers = JSON.parse(localStorage.getItem('formAnswers') || '{}');
            $watch('formAnswers', value => localStorage.setItem('formAnswers', JSON.stringify(value)))
        "
        x-data="{ 
            city: '',  
            nationality: 'France', 
            department: '', 
            formAnswers: {}, 
            departments: ['01 - Ain', '02 - Aisne', '03 - Allier', '06 - Alpes-Maritimes', '13 - Bouches-du-Rh√¥ne', '75 - Paris', '83 - Var', '84 - Vaucluse']
        }">
      
        <h1 class="text-3xl font-bold mb-4">Formulaire - <span x-text="city"></span> - √âtape 3</h1>
        
        <!-- Question 1 : Nationalit√© -->
        <p class="text-xl mb-2">Quelle est votre nationalit√© ?</p>
        <select x-model="nationality" class="border p-2 rounded w-full mb-4">
            <template x-for="option in ['France', 'Belgique', 'Suisse', 'Espagne', 'Autre']">
                <option x-text="option"></option>
            </template>
        </select>

        <!-- Question 2 : D√©partement (uniquement si France est s√©lectionn√©) -->
        <template x-if="nationality === 'France'">
            <div>
                <p class="text-xl mb-2">Dans quel d√©partement r√©sidez-vous ?</p>
                <input 
                    type="text"
                    x-model="department"
                    list="departmentsList"
                    class="border p-2 rounded w-full mb-4"
                    placeholder="Commencez √† taper votre d√©partement...">
                <datalist id="departmentsList">
                    <template x-for="dept in departments" :key="dept">
                        <option x-text="dept"></option>
                    </template>
                </datalist>
            </div>
        </template>

        <!-- Bouton de validation -->
        <button
            type="button"
            x-on:click="if(nationality && (nationality !== 'France' || department)){ 
                formAnswers.city = city;
                formAnswers.nationality = nationality;
                if (nationality === 'France') formAnswers.department = department;
                localStorage.setItem('formAnswers', JSON.stringify(formAnswers));
                console.log('Form3 - Donn√©es sauvegard√©es : ', JSON.parse(localStorage.getItem('formAnswers')));

                // Redirige vers l'√©tape 4 en conservant la ville d√©tect√©e
                window.location.href = '/' + city + '/form4';
            } else { 
                alert('Veuillez s√©lectionner une nationalit√© et, si vous √™tes en France, un d√©partement'); 
            }"
            class="w-full md:w-auto bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
            Valider
        </button>
    </main>
</body>
</html>
