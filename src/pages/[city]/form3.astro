---
import Header from '../../components/Header.astro';
import "../../styles/global.css";
import cities from '../../data/cities.json'; // üî• Import des villes dynamiques

// Astro doit savoir quelles pages g√©n√©rer avant le build
export async function getStaticPaths() {
  return cities.map(city => ({ params: { city } }));
}
---

<html lang="fr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />
    <title>Formulaire √âtape 3</title> <!-- üî• Valeur par d√©faut -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <Header />
    <main class="container mx-auto p-4 max-w-lg"
        x-init="
            city = window.location.pathname.split('/')[1]; 
            document.title = 'Formulaire - ' + city + ' - √âtape 3';
            formAnswers = JSON.parse(localStorage.getItem('formAnswers') || '{}');
            $watch('formAnswers', value => localStorage.setItem('formAnswers', JSON.stringify(value)))
        "
        x-data="{ 
            city: '',  
            stayPeriod: 'Inconnu', 
            startDate: '', 
            endDate: '', 
            formAnswers: {} 
        }">
      
        <h1 class="text-3xl font-bold mb-4">Formulaire - <span x-text="city"></span> - √âtape 3</h1>
        
        <!-- Question 1 : P√©riode de s√©jour -->
        <p class="text-xl mb-4">P√©riode de s√©jour :</p>
        <div class="flex flex-wrap justify-start gap-2 md:gap-4 mb-4">
            <template x-for="option in ['Hiver', 'Printemps', '√ât√©', 'Automne', 'Inconnu']">
                <button 
                    type="button"
                    x-on:click="stayPeriod = option"
                    :class="stayPeriod === option ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'"
                    class="w-full md:w-auto px-4 py-2 rounded hover:bg-blue-400">
                    <span x-text="option"></span>
                </button>
            </template>
        </div>

        <!-- Question 2 : Date de d√©but et de fin (facultatives) -->
        <p class="text-xl mb-2">Dates de s√©jour, si vous pouvez les renseigner :</p>
        <label class="block mb-2">
            <span class="text-lg">Date de d√©but :</span>
            <input 
                type="date" 
                x-model="startDate" 
                class="border p-2 rounded w-full mb-2">
        </label>
        <label class="block">
            <span class="text-lg">Date de fin :</span>
            <input 
                type="date" 
                x-model="endDate" 
                class="border p-2 rounded w-full">
        </label>

        <!-- Bouton de validation -->
        <button
            type="button"
            x-on:click="if(stayPeriod){ 
                formAnswers.city = city;
                formAnswers.stayPeriod = stayPeriod;
                if (startDate) formAnswers.startDate = startDate;
                if (endDate) formAnswers.endDate = endDate;
                localStorage.setItem('formAnswers', JSON.stringify(formAnswers));
                console.log('Form3 - Donn√©es sauvegard√©es : ', JSON.parse(localStorage.getItem('formAnswers')));

                // Redirige vers l'√©tape 4 en conservant la ville d√©tect√©e
                window.location.href = '/' + city + '/form4';
            } else { 
                alert('Veuillez s√©lectionner une p√©riode de s√©jour.'); 
            }"
            class="w-full md:w-auto bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
            Valider
        </button>
    </main>
</body>
</html>
