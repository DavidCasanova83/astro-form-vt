---
import Header from '../../components/Header.astro';
import "../../styles/global.css";
import cities from '../../data/cities.json';

// Astro doit savoir quelles pages g√©n√©rer avant le build
export async function getStaticPaths() {
  return cities.map(city => ({ params: { city } }));
}
---

<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>√âtape 5</title> <!-- üî• Valeur par d√©faut -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <Header />
    <main class="container mx-auto p-6 max-w-lg bg-white shadow-lg rounded-lg">
      
        <h1 class="text-3xl font-bold mb-4 text-left">Envoi du formulaire</h1>

        <p class="text-lg text-left text-gray-600 mb-6">Derni√®re √©tape : renseignez e-mail et consentement.</p>

        <div x-data="{ 
            email: '', 
            consentNewsletter: false, 
            consentDataProcessing: false, 
            formAnswers: {} 
        }"
        x-init="formAnswers = JSON.parse(localStorage.getItem('formAnswers') || '{}')"
        class="space-y-4">

            <!-- Champ Email -->
            <div>
                <label class="block text-lg font-semibold mb-2">Adresse e-mail</label>
                <input 
                    type="email" 
                    x-model="email" 
                    class="border p-3 rounded w-full text-gray-700 focus:ring focus:ring-blue-200 focus:outline-none" 
                    placeholder="contact@verdontourisme.com" required>
            </div>

            <!-- S√©parateur -->
            <hr class="my-4 border-t border-gray-300">

            <!-- Consentement √† l'inscription newsletter -->
            <div class="bg-gray-100 p-4 rounded-lg">
                <label class="flex items-start space-x-3">
                    <input type="checkbox" x-model="consentNewsletter" class="w-6 h-6 text-blue-500 border-gray-300 rounded">
                    <span class="text-sm text-gray-700 leading-tight">
                        La personne souhaite recevoir la <span class="font-extrabold">newsletter</span> et des informations sur les √©v√©nements.
                    </span>
                </label>
            </div>

            <!-- Consentement au traitement des donn√©es -->
            <div class="bg-gray-100 p-4 rounded-lg">
                <label class="flex items-start space-x-3">
                    <input type="checkbox" x-model="consentDataProcessing" class="w-6 h-6 text-blue-500 border-gray-300 rounded">
                    <span class="text-sm text-gray-700 leading-tight">
                        J'accepte que mes donn√©es soient trait√©es conform√©ment √† la <a href="/politique-confidentialite" class="text-blue-500 hover:underline">politique de confidentialit√© RGPD</a>.
                    </span>
                </label>
            </div>

            <!-- Bouton de validation -->
            <button
                type="button"
                x-on:click="if(email && consentDataProcessing) { 
                    formAnswers.email = email;
                    formAnswers.consentNewsletter = consentNewsletter;
                    formAnswers.consentDataProcessing = consentDataProcessing;
                    
                    localStorage.setItem('formAnswers', JSON.stringify(formAnswers));
                    console.log('Form5 - Donn√©es sauvegard√©es : ', JSON.parse(localStorage.getItem('formAnswers')));

                    // Envoi des donn√©es au serveur
                    fetch('/api/saveAnswer', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formAnswers)
                    })
                    .then(response => response.json())
                    .then(data => {
                        console.log('R√©ponse du serveur : ', data);
                        alert('Merci ! Votre formulaire est bien enregistr√©.');
                        window.location.href = '/merci';
                    })
                    .catch(error => {
                        console.error('Erreur lors de la sauvegarde : ', error);
                        alert('Erreur lors de la sauvegarde.');
                    });

                } else { 
                    alert('Veuillez entrer votre adresse e-mail et accepter le traitement des donn√©es.');
                }"
                class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg">
                Envoyer
            </button>

        </div>
    </main>
</body>
</html>
