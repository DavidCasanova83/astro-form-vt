---
import Header from '../../components/Header.astro';
import "../../styles/global.css";
---
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title x-text="city + ' - Formulaire étape 1'">Formulaire - Étape 1</title>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <Header />
    <main class="container mx-auto p-4" x-data="{ 
      city: '',
      country: '', 
      contactMode: 'Accueil physique', 
      formAnswers: {} 
    }" x-init="
      city = window.location.pathname.split('/')[1]; // Récupère la ville depuis l'URL
    ">
      <h1 class="text-3xl font-bold mb-4">Formulaire <span x-text="city"></span> - Étape 1</h1>
      
      <!-- Question 1 : Pays de résidence -->
      <p class="text-xl mb-4">Quel est votre pays de résidence ?</p>
      <div class="flex space-x-4 mb-4">
        <button 
          x-on:click="country = 'France'" 
          :class="country === 'France' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          France
        </button>
        <button 
          x-on:click="country = 'Angleterre'" 
          :class="country === 'Angleterre' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          Angleterre
        </button>
        <button 
          x-on:click="country = 'Allemagne'" 
          :class="country === 'Allemagne' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          Allemagne
        </button>
      </div>

      <!-- Question 2 : Mode de contact -->
      <p class="text-xl mb-4">Comment souhaitez-vous être contacté ?</p>
      <div class="flex space-x-4 mb-4">
        <button 
          x-on:click="contactMode = 'Accueil physique'" 
          :class="contactMode === 'Accueil physique' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          Accueil physique
        </button>
        <button 
          x-on:click="contactMode = 'Téléphone'" 
          :class="contactMode === 'Téléphone' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          Téléphone
        </button>
        <button 
          x-on:click="contactMode = 'Mail'" 
          :class="contactMode === 'Mail' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          Mail
        </button>
      </div>
      
      <!-- Bouton de validation -->
      <button
        x-on:click="if(country && contactMode){ 
          formAnswers = { city, country, contactMode };
          localStorage.setItem('formAnswers', JSON.stringify(formAnswers));
          console.log('Form1 - Données sauvegardées : ', JSON.parse(localStorage.getItem('formAnswers')));

          // Redirige vers l'étape 2 en conservant la ville dans l'URL
          window.location.href='/' + city + '/form2';
        } else { 
          alert('Veuillez sélectionner un pays et un mode de contact'); 
        }"
        class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
        Valider
      </button>
    </main>
  </body>
</html>
