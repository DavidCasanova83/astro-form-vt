---
import Header from '../../components/Header.astro';
import "../../styles/global.css";
---
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title x-text="city + ' - Formulaire étape 3'">Formulaire - Étape 3</title>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <Header />
    <main class="container mx-auto p-4" x-data="{ 
      city: '',
      nationality: 'France', 
      department: '', 
      formAnswers: {},
      departments: ['01 - Ain', '02 - Aisne', '03 - Allier', '06 - Alpes-Maritimes', '13 - Bouches-du-Rhône', '75 - Paris', '83 - Var', '84 - Vaucluse'] // Exemple de départements
    }" x-init="
      city = window.location.pathname.split('/')[1]; // Récupération automatique de la ville
      formAnswers = JSON.parse(localStorage.getItem('formAnswers') || '{}');
    ">
      <h1 class="text-3xl font-bold mb-4">Formulaire <span x-text="city"></span> - Étape 3</h1>
      
      <!-- Question 1 : Nationalité -->
      <p class="text-xl mb-2">Quelle est votre nationalité ?</p>
      <select x-model="nationality" class="border p-2 rounded w-full mb-4">
        <option value="France">France</option>
        <option value="Belgique">Belgique</option>
        <option value="Suisse">Suisse</option>
        <option value="Espagne">Espagne</option>
        <option value="Autre">Autre</option>
      </select>

      <!-- Question 2 : Département (uniquement si France est sélectionné) -->
      <template x-if="nationality === 'France'">
        <div>
          <p class="text-xl mb-2">Dans quel département résidez-vous ?</p>
          <input 
            type="text"
            x-model="department"
            list="departmentsList"
            class="border p-2 rounded w-full mb-4"
            placeholder="Commencez à taper votre département...">
          <datalist id="departmentsList">
            <template x-for="dept in departments" :key="dept">
              <option x-text="dept"></option>
            </template>
          </datalist>
        </div>
      </template>

      <!-- Bouton de validation -->
      <button
        x-on:click="if(nationality && (nationality !== 'France' || department)){ 
          formAnswers.nationality = nationality;
          if (nationality === 'France') formAnswers.department = department;
          localStorage.setItem('formAnswers', JSON.stringify(formAnswers));
          console.log('Form3 - Données sauvegardées : ', JSON.parse(localStorage.getItem('formAnswers')));

          // Redirige vers l'étape 4 en conservant la ville détectée
          window.location.href='/' + city + '/form4';
        } else { 
          alert('Veuillez sélectionner une nationalité et, si vous êtes en France, un département'); 
        }"
        class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
        Valider
      </button>
    </main>
  </body>
</html>
