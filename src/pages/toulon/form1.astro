---
import Header from '../../components/Header.astro';
import "../../styles/global.css";
---
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Toulon - Formulaire étape 1</title>
    <!-- Inclusion d'AlpineJS -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <Header />
    <!-- Conteneur AlpineJS qui gère l'état du formulaire -->
    <main class="container mx-auto p-4" x-data="{ country: '' }">
      <h1 class="text-3xl font-bold mb-4">Formulaire Toulon - Étape 1</h1>
      
      <p class="text-xl mb-4">Quel est votre pays de résidence ?</p>
      <div class="flex space-x-4 mb-4">
        <button 
          x-on:click="country = 'France'" 
          :class="country === 'France' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          France
        </button>
        <button 
          x-on:click="country = 'Angleterre'" 
          :class="country === 'Angleterre' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          Angleterre
        </button>
        <button 
          x-on:click="country = 'Allemagne'" 
          :class="country === 'Allemagne' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-black'" 
          class="px-4 py-2 rounded hover:bg-blue-400">
          Allemagne
        </button>
      </div>
      
      <!-- Bouton de validation -->
      <button
        x-on:click="if(country){ 
          // Sauvegarde la réponse dans le localStorage
          localStorage.setItem('formAnswers', JSON.stringify({ country }));
          console.log('Form1 - Données sauvegardées : ', JSON.parse(localStorage.getItem('formAnswers')));
          // Redirige vers l'étape 2
          window.location.href='/toulon/form2';
        } else { 
          alert('Veuillez sélectionner un pays'); 
        }"
        class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
        Valider
      </button>
    </main>
  </body>
</html>
